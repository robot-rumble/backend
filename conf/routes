# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                      controllers.HomeController.index
GET         /rules                                 controllers.HomeController.rules
GET         /warehouse                             controllers.RobotController.warehouse
GET         /battles                               controllers.RobotController.battles

GET         /signup                                controllers.UserController.create
POST        /signup                                controllers.UserController.postCreate
GET         /login                                 controllers.UserController.login
POST        /login                                 controllers.UserController.postLogin
GET         /logout                                controllers.UserController.logout
GET         /p/:username                           controllers.UserController.profile(username)

GET         /create-robot                          controllers.RobotController.create
POST        /create-robot                          controllers.RobotController.postCreate
GET         /p/:user/:robot                        controllers.RobotController.view(user, robot)
GET         /p/:user/:robot/edit                   controllers.RobotController.edit(user, robot)
GET         /view-code/:robotId                    controllers.RobotController.viewPublishedCode(robotId: Long)
GET         /p/:user/:robot/challenge              controllers.RobotController.challenge(user, robot)
GET         /p/:user/:robot/publish                controllers.RobotController.publish(user, robot)
POST        /publish/:robotId                      controllers.RobotController.postPublish(robotId: Long)

GET         /b/:id                           controllers.RobotController.viewBattle(id: Long)

+ nocsrf
POST        /api/login                             controllers.UserController.apiLogin
+ nocsrf
POST        /api/create-robot                      controllers.RobotController.apiCreate
+ nocsrf
POST        /api/update-robot-code/:robotId        controllers.RobotController.apiUpdate(robotId: Long)

GET         /api/get-user-robots/:user             controllers.RobotController.apiGetUserRobots(user)
GET         /api/get-robot/:user/:robot            controllers.RobotController.apiGetRobot(user, robot)
GET         /api/get-robot-code/:robotId           controllers.RobotController.apiGetRobotCode(robotId: Long)

GET         /assets/*file                          controllers.Assets.at(file)
